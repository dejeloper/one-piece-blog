---
interface Props {
  title?: string;
  summary?: string;
  whyThisBlog?: string;
  ctaText?: string;
  ctaLink?: string;
  firstChapterText?: string;
  firstChapterLink?: string;
  image?: string;
}

const {
  title = "Mi propio One Piece",
  summary = "Una historia de aventura y autodescubrimiento inspirada en One Piece. José deja atrás su vida cómoda para enfrentar rupturas, seguir un impulso misterioso y lanzarse al mar de lo desconocido.",
  whyThisBlog = "No hace falta conocer One Piece. Las referencias se explican y solo sirven como guiños a una historia sobre libertad, sueños y cambio.",
  ctaText = "Últimos capítulos",
  ctaLink = "#chapters",
  firstChapterText = "Capítulo 1",
  firstChapterLink = "/blog/cap-1-noticia",
  image = "/images/preview2.webp",
} = Astro.props;
---

<header
  id="home"
  class="relative py-12 md:py-24 px-4 md:px-6 overflow-hidden bg-gradient-to-b from-background to-[var(--secondary)/10]"
>
  <div
    class="max-w-6xl mx-auto grid md:grid-cols-2 gap-8 md:gap-12 items-center"
  >
    <!-- Texto -->
    <div class="text-center md:text-left space-y-5 md:space-y-8">
      <h1
        class="text-3xl md:text-6xl font-extrabold leading-tight bg-clip-text text-transparent bg-gradient-to-r from-[var(--primary)] to-[var(--accent)]"
      >
        {title}
      </h1>

      <div class="space-y-3 md:space-y-4">
        <p
          class="text-base md:text-lg text-[var(--muted-foreground)] leading-relaxed"
        >
          {summary}
        </p>

        <p
          class="text-sm md:text-base text-[var(--muted-foreground)]/80 leading-relaxed italic"
        >
          {whyThisBlog}
        </p>
      </div>

      <div class="flex flex-row gap-3 md:gap-4 justify-center md:justify-start">
        <a
          href={firstChapterLink}
          data-astro-prefetch
          class="inline-block bg-[var(--secondary)] text-[var(--secondary-foreground)] px-5 py-2.5 md:px-8 md:py-3 rounded-xl font-semibold text-sm md:text-lg shadow-md transition-all hover:-translate-y-1 hover:shadow-lg focus:ring-4 focus:ring-[var(--secondary)]/40 whitespace-nowrap"
        >
          {firstChapterText}
        </a>
        <a
          href={ctaLink}
          data-astro-prefetch
          class="inline-block bg-[var(--primary)] text-[var(--primary-foreground)] px-5 py-2.5 md:px-8 md:py-3 rounded-xl font-semibold text-sm md:text-lg shadow-md transition-all hover:-translate-y-1 hover:shadow-lg focus:ring-4 focus:ring-[var(--primary)]/40 whitespace-nowrap"
        >
          {ctaText}
        </a>
      </div>
    </div>

    <!-- Imagen -->
    <figure class="relative flex justify-center md:justify-end">
      <img
        src={image}
        alt="Ilustración inspirada en One Piece"
        class="rounded-2xl shadow-xl max-h-[420px] w-full object-cover"
        loading="lazy"
      />
      <figcaption class="sr-only">Imagen ilustrativa del blog</figcaption>
    </figure>
  </div>
</header>
