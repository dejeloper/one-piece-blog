---
import Layout from "../layouts/Layout.astro";
import Capther from "../components/Capther.astro";
import { getPageInfo, getLatestPosts } from "../lib/wp";

const { title, content, seo } = await getPageInfo("home");
const posts = await getLatestPosts({ perPage: 3 });

interface Post {
  title: string;
  excerpt: string;
  featuredImage: string;
  date: string;
  slug: string;
}
---

<Layout title={seo.title} description={seo.description}>
  <!-- <Layout title="as" description="as"> -->
  <section class="bg-black text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl font-bold mb-6">{title}</h1>
      <div class="text-xl max-w-2xl mx-auto" set:html={content} />
    </div>
  </section>

  <section class="container mx-auto px-4 py-12">
    <h2 class="text-3xl font-bold md-8 text-center">Últimos Capítulos</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        posts.map((post: Post) => (
          <Capther
            title={post.title}
            excerpt={post.excerpt}
            featuredImage={post.featuredImage}
            date={new Date(post.date).toLocaleDateString("es-ES", {
              year: "numeric",
              month: "long",
              day: "numeric",
              hour: "2-digit",
              minute: "2-digit",
            })}
            slug={post.slug}
          />
        ))
      }
    </div>
  </section>
</Layout>
