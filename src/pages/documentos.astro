---
import Layout from "../layouts/Layout.astro";
import { getDocuments } from "../lib/wp";

interface Document {
  id: number;
  title: string;
  excerpt: string;
  content: string;
  date: string;
  slug: string;
  featuredImage: string;
}

const documents: Document[] = await getDocuments({ perPage: 50 });
---

<Layout
  title="Documentos - Mi Propio One Piece"
  description="Colección completa de documentos y recursos del blog Mi Propio One Piece"
>
  <main class="py-16 bg-[var(--background)] min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-[var(--foreground)] mb-4">Documentos</h1>
        <p class="text-lg text-[var(--muted-foreground)] max-w-2xl mx-auto">
          Explora nuestra colección completa de documentos, recursos y material de referencia
        </p>
        <div class="mt-4 text-sm text-[var(--muted-foreground)]">
          {documents.length} documento{documents.length !== 1 ? 's' : ''} encontrado{documents.length !== 1 ? 's' : ''}
        </div>
      </div>

      {documents && documents.length > 0 ? (
        <!-- Grid de documentos -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {documents.map((document) => (
            <div class="bg-[var(--card)] rounded-lg shadow-md hover:shadow-lg transition-all duration-300 hover:scale-105 overflow-hidden border border-[var(--border)]">
              <!-- Imagen genérica con gradiente único para cada documento -->
              <div class={`h-40 bg-gradient-to-br ${
                ['from-red-400 to-red-600', 'from-orange-400 to-red-500', 'from-amber-400 to-orange-500', 'from-red-300 to-pink-400', 'from-orange-300 to-red-400'][document.id % 5]
              } flex items-center justify-center`}>
                <svg 
                  class="w-12 h-12 text-white" 
                  fill="currentColor" 
                  viewBox="0 0 20 20" 
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                </svg>
              </div>
              
              <!-- Contenido del documento -->
              <div class="p-5">
                <h3 class="text-lg font-semibold text-[var(--card-foreground)] mb-2 line-clamp-2 leading-tight">
                  {document.title}
                </h3>
                
                <!-- Autor y fecha -->
                <div class="flex items-center justify-between text-xs text-[var(--muted-foreground)] mb-3">
                  <div class="flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Autor</span>
                  </div>
                  <div class="flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                    <span>{new Date(document.date).toLocaleDateString('es-ES', { 
                      day: 'numeric', 
                      month: 'short' 
                    })}</span>
                  </div>
                </div>
                
                <!-- Excerpt corto -->
                {document.excerpt && (
                  <p class="text-sm text-[var(--muted-foreground)] mb-3 line-clamp-2">
                    {document.excerpt}
                  </p>
                )}
                
                <!-- Botón para ver documento -->
                <a 
                  href={`/documentos/${document.slug}`}
                  class="inline-block bg-[var(--primary)]/90 text-[var(--primary-foreground)] px-4 py-2 rounded-lg font-semibold text-sm transition-transform active:scale-95 hover:bg-[var(--primary)] w-full text-center"
                >
                  Leer documento
                  <svg class="w-4 h-4 ml-1 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <!-- Estado vacío -->
        <div class="text-center py-12">
          <svg class="w-16 h-16 text-[var(--muted-foreground)] mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="text-xl font-medium text-[var(--foreground)] mb-2">No hay documentos disponibles</h3>
          <p class="text-[var(--muted-foreground)]">Aún no se han publicado documentos en esta sección.</p>
        </div>
      )}

      <!-- Botón para regresar -->
      <div class="text-center mt-12">
        <a 
          href="/"
          class="inline-block bg-[var(--secondary)]/90 text-[var(--secondary-foreground)] px-6 py-3 rounded-lg font-semibold text-base transition-transform active:scale-95 hover:bg-[var(--secondary)]"
        >
          <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"></path>
          </svg>
          Volver al inicio
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>