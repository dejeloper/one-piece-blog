---
import Layout from "../layouts/Layout.astro";
import { getDocuments } from "../lib/wp";

interface Document {
  id: number;
  title: string;
  excerpt: string;
  content: string;
  date: string;
  slug: string;
  featuredImage: string;
}

const documents: Document[] = await getDocuments({ perPage: 50 });
---

<Layout
  title="Documentos - Mi Propio One Piece"
  description="Colección completa de documentos y recursos del blog Mi Propio One Piece"
>
  <main class="py-20 px-4 bg-[var(--background)] min-h-screen">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-bold text-[var(--foreground)] mb-4">Documentos</h1> 
      </div>

      {documents && documents.length > 0 ? (
        <!-- Grid de documentos - 2 por fila -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {documents.map((document) => (
            <div class="bg-[var(--card)] border border-[var(--border)] rounded-lg p-6 hover:shadow-lg transition-all duration-300 hover:border-[var(--primary)]/50 flex flex-col h-full">
              <!-- Badge de tipo de documento -->
              <div class="mb-3">
                <span class="bg-[var(--primary)] text-[var(--primary-foreground)] px-3 py-1 rounded-full text-sm font-semibold">
                  Documento
                </span>
              </div>

              <!-- Fecha -->
              <p class="text-xs text-[var(--muted-foreground)] mb-3">
                Publicado:{" "}
                {new Date(document.date).toLocaleDateString("es-ES", {
                  year: "numeric",
                  month: "2-digit",
                  day: "2-digit",
                })}
              </p>

              <!-- Título -->
              <h3 class="font-semibold text-xl mb-3 hover:text-[var(--primary)] transition-colors flex-grow">
                <a href={`/documentos/${document.slug}`} data-astro-prefetch class="no-underline">
                  {document.title}
                </a>
              </h3>

              <!-- Excerpt si existe -->
              {document.excerpt && (
                <p class="text-sm text-[var(--muted-foreground)] mb-4 leading-relaxed">
                  {document.excerpt}
                </p>
              )}

              <!-- Botón -->
              <div class="mt-auto">
                <a 
                  href={`/documentos/${document.slug}`}
                  data-astro-prefetch
                  class="w-full text-center bg-[var(--primary)] text-[var(--primary-foreground)] px-4 py-3 rounded-lg font-semibold text-sm transition-all hover:bg-[var(--primary)]/90 transform active:scale-95 inline-flex items-center justify-center gap-2"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"></path>
                  </svg>
                  Leer documento
                </a>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <!-- Estado vacío -->
        <div class="text-center py-12">
          <svg class="w-16 h-16 text-[var(--muted-foreground)] mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="text-xl font-medium text-[var(--foreground)] mb-2">No hay documentos disponibles</h3>
          <p class="text-[var(--muted-foreground)]">Aún no se han publicado documentos en esta sección.</p>
        </div>
      )}

      <!-- Botón para regresar -->
      <div class="text-center mt-12">
        <a 
          href="/"
          data-astro-prefetch
          class="inline-flex items-center gap-2 bg-[var(--primary)] text-[var(--primary-foreground)] px-6 py-3 rounded-lg font-semibold transition-all hover:bg-[var(--primary)]/90 active:scale-95"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Volver al inicio
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>