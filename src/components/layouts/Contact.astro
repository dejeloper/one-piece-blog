---

<section
  id="contact"
  class="py-10 px-6 bg-gradient-to-b from-[var(--secondary)]/30 to-transparent"
>
  <div class="max-w-4xl mx-auto">
    <!-- Título -->
    <header class="mb-14 text-center">
      <h2 class="text-4xl font-extrabold tracking-tight mb-3">Contacto</h2>
      <p class="text-lg text-[var(--muted-foreground)]">
        Conéctate conmigo en redes o escríbeme directamente por correo.
      </p>
    </header>

    <!-- Contenido en dos columnas -->
    <div class="grid md:grid-cols-2 gap-14">
      <!-- Redes sociales -->
      <div>
        <h3 class="text-xl font-semibold mb-6">Redes</h3>
        <ul class="space-y-4" role="list">
          {
            socials.map((social) => (
              <li>
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={social.label}
                  class="flex items-center gap-3 group"
                >
                  <span
                    class="w-6 h-6 text-[var(--primary)] group-hover:text-[var(--foreground)] transition"
                    set:html={icons[social.icon]}
                  />
                  <span class="font-medium group-hover:text-[var(--primary)] transition">
                    {social.label}
                  </span>
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Usuario + Emails -->
      <div>
        <h3 class="text-xl font-semibold mb-6">Contacto directo</h3>
        <p class="text-lg font-semibold mb-6">{user}</p>
        <ul class="space-y-4">
          {
            emails.map((email) => (
              <li>
                <a
                  href={`mailto:${email}`}
                  class="flex items-center gap-3 group"
                >
                  <span
                    class="w-5 h-5 text-[var(--primary)] group-hover:text-[var(--foreground)] transition"
                    set:html={icons.mail}
                  />
                  <span class="group-hover:text-[var(--primary)] transition">
                    {email}
                  </span>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
