---
interface Curiosity {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  curiosities?: Curiosity[];
}

const { curiosities } = Astro.props;
---

<section id="curiosities" class="py-20 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
      Ideas fascinantes
    </h2>
    <div class="grid md:grid-cols-2 gap-8 gap-y-6 text-center md:text-left">
      {
        curiosities && curiosities.length > 0 ? (
          curiosities.map((item) => (
            <div class="p-6 bg-[var(--card)] border border-[var(--border)] rounded-lg hover:shadow-md transition">
              <h3 class="text-xl font-semibold mb-2">
                {item.icon} {item.title}
              </h3>
              <p class="text-[var(--muted-foreground)]">{item.description}</p>
            </div>
          ))
        ) : (
          <p class="text-center col-span-3 text-[var(--muted-foreground)]">
            No hay curiosidades disponibles en este momento.
          </p>
        )
      }
    </div>
  </div>
</section>
